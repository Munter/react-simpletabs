// ----------------------------------------------------------------------------
//
//  React SimpleTabs
//
// ----------------------------------------------------------------------------

$color-gray = #DDD;
$color-medium-gray = #A9A9A9;
$color-hard = #333;
$color-primary = #3498db;

// ----------------------------------------------------------------------------
//  Tabs Navigation
// ----------------------------------------------------------------------------

$tabs-navigation-height = 50px;

.tabs-navigation {
  padding: 0 20px;
  max-height: $tabs-navigation-height;
  border-bottom: 1px solid $color-gray;
}

.tabs-menu {
  display: table;
  list-style: none;
  padding: 0;
  margin: 0;
}

.tabs-menu-item {
  float: left;
}

.tabs-menu-item a {
  display: block;
  padding: 0 40px;
  height: $tabs-navigation-height;
  line-height: $tabs-navigation-height;
  border-bottom: 0;
  color: $color-medium-gray;
}

.tabs-menu-item:not(.is-active) a:hover {
  color: $color-primary;
}

.tabs-menu-item.is-active a {
  background: #fff;
  border: 1px solid $color-gray;
  border-top: 2px solid $color-primary;
  border-bottom: 0;
  color: $color-hard;
}

// ----------------------------------------------------------------------------
//  Tabs Panel
// ----------------------------------------------------------------------------

.tabs-panel {
  padding: 30px;
}
